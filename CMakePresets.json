{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 12,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "generator": "Ninja",
            "description": "Use Ninja generator with Debug build on Linux",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "generator": "Ninja",
            "description": "Use Ninja generator with Release build on Linux",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (MSVC)",
            "generator": "Ninja",
            "description": "Use Ninja with MSVC in Debug mode",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (MSVC)",
            "generator": "Ninja",
            "description": "Use Ninja with MSVC in Release mode",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "displayName": "Build Debug",
            "configurePreset": "linux-debug",
            "jobs": 4,
            "description": "Build using Debug preset"
        },
        {
            "name": "linux-release",
            "displayName": "Build Release",
            "configurePreset": "linux-release",
            "jobs": 4,
            "description": "Build using Release preset"
        },
        {
            "name": "windows-debug",
            "displayName": "Build Debug",
            "configurePreset": "windows-debug",
            "jobs": 4,
            "description": "Build using Debug preset"
        },
        {
            "name": "windows-release",
            "displayName": "Build Release",
            "configurePreset": "windows-release",
            "jobs": 4,
            "description": "Build using Release preset"
        }
    ]
}
